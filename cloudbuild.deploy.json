{
  "steps": [
    {
      "name": "gcr.io/cloud-builders/yarn",
      "args": ["install"]
    },
    {
      "name": "gcr.io/cloud-builders/yarn",
      "args": ["test", "--no-watch"]
    },
    {
      "name": "gcr.io/cloud-builders/yarn",
      "args": ["run", "build"]
    },
    {
      "name": "gcr.io/cloud-builders/yarn",
      "args": ["run", "build-storybook"]
    },
    {
      "name": "gcr.io/$PROJECT_ID/firebase",
      "args": [
        "deploy",
        "-P",
        "$PROJECT_ID",
        "--only",
        "hosting",
        "--token",
        "$_FIREBASE_DEPLOY_TOKEN"
      ]
    }
  ]
}
